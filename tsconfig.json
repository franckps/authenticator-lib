{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "build",
    "strict": true,
    "downlevelIteration": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "moduleDetection": "force",
    "lib": ["ESNext"]
  },
  "exclude": ["node_modules", "**/*.spec.ts", "build"],
  "include": ["index.ts"]
}
